# ViraLearn ContentBot Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=ViraLearn ContentBot
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=viralearn_content
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Gemini AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL_NAME=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7
GEMINI_TOP_P=0.9
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT=30

# Imagen AI Configuration
IMAGEN_API_KEY=your-imagen-api-key-here
IMAGEN_PROJECT_ID=your-google-cloud-project-id
IMAGEN_LOCATION=us-central1
IMAGEN_MODEL_NAME=imagen-3.0-8b
IMAGEN_MAX_RETRIES=3
IMAGEN_TIMEOUT=60

# Audio Processing Configuration
AUDIO_TTS_API_KEY=your-google-cloud-tts-api-key
AUDIO_TTS_VOICE=en-US-Standard-A
AUDIO_STT_API_KEY=your-google-cloud-stt-api-key
AUDIO_STT_LANGUAGE=en-US

# Security Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Content Settings
MAX_CONTENT_LENGTH=10000
SUPPORTED_PLATFORMS=["twitter", "linkedin", "instagram", "facebook"]

# File Storage Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Settings (set to false in production)
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"] 